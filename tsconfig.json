{
 "compilerOptions": {
        "baseUrl": "../ecommerce2",
        "paths": {
            "@src/*": ["src/*"],
            "@component/*": ["src/component/*"],
            "@about/*": ["src/View/About/*"],
            "@blog/*": ["src/View/Blog/*"],
            "@cart/*": ["src/View/Cart/*"],
            "@contact/*": ["src/View/Contact/*"],
            "@home/*": ["src/View/Home/*"],
            "@login/*": ["src/View/Login/*"],
            "@shop/*": ["src/View/Shop/*"],
            "@error/*": ["src/component/error/*"],
            "@modal/*": ["src/component/modal/*"],
            "@notify/*": ["src/component/notify/*"],
            "@router/*": ["src/component/router/*"],
            "@layoutContainer/*": ["src/App/layout/container/*"],
            "@loader/*": ["src/App/layout/Loader/*"],
            "@models/*": ["src/models/*"],
            "@api/*": ["src/models/api/*"],
            "@resource/*": ["src/models/resource/*"],
            "@service/*": ["src/models/service/*"],
            "@utils/*": ["src/utils/*"]
        },
        "outDir": "build/",
        "rootDir": "src/",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strictFunctionTypes": true
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "public/",
        "src/setupTests.ts"
    ]
}
